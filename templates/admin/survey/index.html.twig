{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminPersonController!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-2">Administration des sondages</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Question</th>
                    <th>Picture</th>
                    <th>Description</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% if pagination.data|length == 0 %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun r√©sultat</td>
                    </tr>
                {% else %}
                    {# Afficher la liste normale des personnes ici #}
                    {% for survey in pagination.data %}
                        <tr>
                            <td>{{ survey.id }}</td>
                            <td>{{ survey.question }}</td>
                            <td>{{ survey.picture }}</td>
                            <td>{{ survey.description }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
        {% if pagination.data|length > 0 %}
            {{ pagination.display() }}
        {% endif %}
    </div>
{% endblock %}
