{% extends "base.html.twig" %}

{% block title %}Envoyer un message{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container marginForm">
        <h1 class="my-2">Envoyer un message</h1>
        <form method="post" enctype="multipart/form-data">
            {{ form_start(form) }}

            {# Champ Nom #}
            <div class="form-group">
                {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>

            {# Champ Prénom #}
            <div class="form-group">
                {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.firstName) }}
            </div>

            {# Champ Email #}
            <div class="form-group">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>

            {# Champ Sujet #}
            <div class="form-group">
                {{ form_label(form.subject, 'Sujet', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.subject) }}
            </div>

            {# Champ Message #}
            <div class="form-group">
                {{ form_label(form.message, 'Message', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.message) }}
            </div>

            {# Bouton de soumission #}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </div>

            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
