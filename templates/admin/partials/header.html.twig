<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}My Symfony App{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Admin</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav me-auto mb-3 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_dashboard') }}"><i class="fas fa-chart-line"></i> Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_person_index') }}"><i class="fa-solid fa-person"></i> Personnes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_owner_index') }}"><i class="fa-solid fa-person-shelter"></i> Propriétaires</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_survey_index') }}"><i class="fa-solid fa-square-poll-vertical"></i> Sondages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_news_index') }}"><i class="fa-solid fa-newspaper"></i> Nouvelles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_event_index') }}"><i class="fa-solid fa-calendar-day"></i> Evenements</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_contact_index') }}"><i class="fa-solid fa-envelope"></i> Messages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_issue_index') }}"><i class="fa-solid fa-triangle-exclamation"></i> Problèmes</a>
                </li>
          </ul>
          <ul class="navbar-nav ms-auto me-5">
                <li class="nav-item">
                    <a href="{{ path('homepage') }}" target="_blank" class="nav-link"><i class="fas fa-eye"></i> Voir le site</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a href="{{ path('superadmin_account_logout')}}" class="nav-link">Déconnexion</a>
                    </li>
                {% endif %}
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
        {% block body %}{% endblock %}
    </div>

    {% for label, messages in app.flashes %}
        <div class="container">
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    <p>{{ message | raw }}</p>
                {% endfor %}
            </div>
        </div>
    {% endfor %}

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
