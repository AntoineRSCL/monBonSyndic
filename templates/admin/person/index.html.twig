{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminPersonController!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-2">Administration des personnes</h1>
        <a href="{{ path('admin_person_new') }}" class="btn btn-secondary my-1 mb-4">
            <i class="fa-solid fa-circle-plus"></i>
            <span class="ms-2">Ajouter une personne</span>
        </a>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form method="get" action="{{ path('admin_person_search') }}">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" name="q" value="{{ app.request.query.get('q') }}" placeholder="Rechercher par prÃ©nom" aria-label="Rechercher" aria-describedby="button-addon2">
                        <button class="btn btn-primary" type="submit" id="button-addon2">Rechercher</button>
                    </div>
                </form>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Roles</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {# Afficher la liste normale des personnes ici #}
                {% for person in pagination.data %}
                    <tr>
                        <td>{{person.id}}</td>
                        <td>{{person.firstName}}</td>
                        <td>{{person.name}}</td>
                        <td>{{person.email}}</td>
                        <td>{{person.phone}}</td>
                        <td>{{person.roles | join(', ')}}</td>
                        <td class="text-center">
                            <a href="{{path("admin_person_edit",{"id":person.id})}}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="{{path("admin_person_delete",{"id":person.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{pagination.display()}}
    </div>
{% endblock %}
